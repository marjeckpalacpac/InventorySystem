@using Inventory.Models.ViewModels

@model CompanyViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="border p-3">
            <div class="row">
                <div class="py-2 col-6">
                    <label asp-for="Name" class="form-label"></label>
                    <input disabled asp-for="Name" class="form-control border-0 shadow" />
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Address" class="form-label"></label>
                    <input disabled asp-for="Address" class="form-control border-0 shadow" />
                </div>
            </div>
            <div class="row">
                <div class="py-2 col-6">
                    <label asp-for="TelephoneNo" class="form-label">Telephone No.</label>
                    <input disabled asp-for="TelephoneNo" class="form-control border-0 shadow" />
                </div>
                <div class="py-2 col-6">
                    <label asp-for="MobileNo" class="form-label">Mobile No.</label>
                    <input disabled asp-for="MobileNo" class="form-control border-0 shadow" />
                </div>
            </div>
            <div class="row">
                <div class="py-2 col-6">
                    <label asp-for="ContactPerson" class="form-label">Contact Person</label>
                    <input disabled asp-for="ContactPerson" class="form-control border-0 shadow" />
                </div>
                <div class="py-2 col-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input disabled asp-for="Email" class="form-control border-0 shadow" />
                </div>
            </div>
            <div class="row">
                <div class="py-2 col-6">
                    <label asp-for="SupplyChainPartners" class="form-label">Supply Chain Partners</label>
                    <select disabled id="multiSelectPartners" asp-for="SupplyChainPartners" multiple="multiple" data-placeholder="Choose item"
                            asp-items="@Model.SupplyChainPartnerSelectList" class="form-select border-0 shadow">
                    </select>
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3 ms-auto">
                    <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border  form-control">
                        Back to List
                    </a>
                </div>
            </div>
            

        </div>
    </div>
</div>

@section Scripts {
    @{
        <script src="~/js/company/crud.js"></script>
    }
}