@using Inventory.Utility.Misc
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<script type="text/javascript">
    toastr.options = {
        "closeButton": true,
        "timeOut": "3000",
        "positionClass": "toast-top-center"
    }
</script>

@if (TempData[TempDataNotification.Success] != null)
{
    
    <script type="text/javascript">
        toastr.success('@TempData[TempDataNotification.Success]')
    </script>
}
@if (TempData[TempDataNotification.Error] != null)
{
    <script type="text/javascript">
        toastr.error('@TempData[TempDataNotification.Error]')
    </script>
}

